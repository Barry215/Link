<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.SkyShadow.dao.mailboxMapper">
	<resultMap id="BaseResultMap" type="cn.SkyShadow.model.mailbox">
		<id column="MAILBOX_ID" property="mailboxId" jdbcType="BIGINT" />
		<result column="BELONG_TYPE" property="belongType" jdbcType="CHAR" />
		<association column="USER" property="user"
			select="cn.SkyShadow.dao.userMapper.selectBaseInfo"></association>
		<association column="OCCUPATION" property="occupation"
			select="cn.SkyShadow.dao.occupationMapper.selectBaseInfo"></association>
		<collection property="mails" column="MAILBOX_ID" select="selectmails"></collection>
	</resultMap>
	<sql id="Base_Column_List">
		MAILBOX_ID, BELONG_TYPE, USER, OCCUPATION
	</sql>
	<select id="selectByPrimaryKey" resultMap="BaseResultMap"
		parameterType="java.lang.Long">
		select
		<include refid="Base_Column_List" />
		from mailbox
		where MAILBOX_ID = #{mailboxId,jdbcType=BIGINT}
	</select>
	<select id="selectmails" parameterType="java.lang.Long"
		resultMap="cn.SkyShadow.dao.mailMapper.BaseResultMap">
		SELECT
		MAIL_ID,
		HEADLINE,
		SUBLINE,
		CONTENT,
		SENDER_MAILBOX,
		RECEIVED_MAILBOX_GROUP,
		SEND_TIME,
		ISREADED
		FROM
		mail
		LEFT JOIN
		mailboxgroup ON mail.RECEIVED_MAILBOX_GROUP
		=
		mailboxgroup.GROUP_ID
		LEFT
		JOIN mailbox_mailboxgroup ON
		mailboxgroup.GROUP_ID =
		mailbox_mailboxgroup.MAILBOXGROUP_ID
		LEFT JOIN
		mailbox ON
		mailbox.MAILBOX_ID =
		mailbox_mailboxgroup.MAILBOXGROUP_ID
		WHERE
		mailbox.MAILBOX_ID = #{mailboxId,jdbcType=BIGINT}
	</select>
	<delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
		delete from
		mailbox
		where MAILBOX_ID = #{mailboxId,jdbcType=BIGINT}
	</delete>
	<insert id="insertSelective" parameterType="cn.SkyShadow.model.mailbox"
		keyProperty="mailboxId">
		insert into mailbox
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="belongType != null">
				BELONG_TYPE,
			</if>
			<if test="user != null">
				USER,
			</if>
			<if test="occupation != null">
				OCCUPATION,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="belongType != null">
				#{belongType,jdbcType=CHAR},
			</if>
			<if test="user != null">
				#{user.userId,jdbcType=BIGINT},
			</if>
			<if test="occupation != null">
				#{occupation.occupationId,jdbcType=BIGINT},
			</if>
		</trim>
	</insert>
</mapper>