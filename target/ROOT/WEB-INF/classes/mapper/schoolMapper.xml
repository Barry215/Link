<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.SkyShadow.dao.schoolMapper">
	<resultMap id="BaseResultMap" type="cn.SkyShadow.model.school">
		<id column="SCHOOL_ID" property="schoolId" jdbcType="BIGINT" />
		<result column="NAME" property="name" jdbcType="VARCHAR" />
		<result column="RANK" property="rank" jdbcType="CHAR" />
		<result column="ISPUBLIC" property="ispublic" jdbcType="CHAR" />
		<association column="LOCATION" property="location"
			select="cn.SkyShadow.dao.locationMapper.selectByPrimaryKey"></association>
		<association column="PARENT_ID" property="parentId" select="selectBaseInfo"></association>
	</resultMap>
	<sql id="Base_Column_List">
		SCHOOL_ID, NAME, LOCATION, RANK, PARENT_ID, ISPUBLIC
	</sql>
	<select id="selectByPrimaryKey" resultMap="BaseResultMap"
		parameterType="java.lang.Long">
		select
		<include refid="Base_Column_List" />
		from school
		where SCHOOL_ID = #{schoolId,jdbcType=BIGINT}
	</select>
	<select id="selectBaseInfo" resultMap="BaseResultMap"
		parameterType="java.lang.Long">
		select
		SCHOOL_ID, NAME, LOCATION, RANK, ISPUBLIC
		from school
		where SCHOOL_ID = #{schoolId,jdbcType=BIGINT}
	</select>
	<delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
		delete from school
		where SCHOOL_ID = #{schoolId,jdbcType=BIGINT}
	</delete>
	<insert id="insert" parameterType="cn.SkyShadow.model.school">
		insert into school (NAME, LOCATION,
		RANK, PARENT_ID, ISPUBLIC)
		values (#{name,jdbcType=VARCHAR},
		#{location.locationId,jdbcType=BIGINT},
		#{rank,jdbcType=CHAR}, #{parentId.schoolId,jdbcType=BIGINT}, #{ispublic,jdbcType=CHAR})
	</insert>
</mapper>